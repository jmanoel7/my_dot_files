#!/bin/bash
[ -f ~/.xsessionrc ] && . ~/.xsessionrc
[ -f ~/.Xresources ] && xrdb -load ~/.Xresources
setxkbmap br
case "$1" in
    "/usr/bin/i3")
        compton -b -f -m 0.95 &
        nitrogen --restore &
        volumeicon &
        clipit &
        nm-applet &
        #/opt/teamviewer/tv_bin/script/teamviewer &
        #hp-systray -x &
        /bin/sh -c 'sleep 5; dropbox start -i' &
        /bin/sh -c 'sleep 5; killall -9 gnome-keyring-daemon' &
        thunar --daemon &
        i3-sensible-terminal &
        exec /usr/bin/i3
        ;;
    "/usr/bin/i3-with-shmlog")
        compton -b -f -m 0.95 &
        nitrogen --restore &
        volumeicon &
        clipit &
        nm-applet &
        #/opt/teamviewer/tv_bin/script/teamviewer &
        #hp-systray -x &
        /bin/sh -c 'sleep 5; dropbox start -i' &
        /bin/sh -c 'sleep 5; killall -9 gnome-keyring-daemon 2>&1 /dev/null' &
        thunar --daemon &
        i3-sensible-terminal &
        exec /usr/bin/i3-with-shmlog
        ;;
    "/usr/bin/startfluxbox")
        compton -b -f -m 0.95 &
        fbsetbg -l &
        volumeicon &
        clipit &
        nm-applet &
        #/opt/teamviewer/tv_bin/script/teamviewer &
        #hp-systray -x &
        /bin/sh -c 'sleep 5; dropbox start -i' &
        /bin/sh -c 'sleep 5; killall -9 gnome-keyring-daemon 2>&1 /dev/null' &
        thunar --daemon &
        guake &
        exec /usr/bin/startfluxbox
        ;;
    "/usr/bin/openbox-session")
        exec /usr/bin/openbox-session
        ;;
    "/usr/bin/razor-session")
        exec /usr/bin/razor-session
        ;;
    *)
        exec /usr/bin/razor-session
        ;;
esac
