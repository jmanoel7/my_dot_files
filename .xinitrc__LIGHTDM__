#!/bin/bash
if [ -f ~/.xsessionrc ]; then
    . ~/.xsessionrc
fi
if [ -f ~/.Xresources ]; then
    xrdb -load ~/.Xresources
fi
if [ -z "$1" ]; then
    SESSION_NAME="mate-session"
else
    SESSION_NAME="$1"
fi
setxkbmap br
case "$SESSION_NAME" in
    "i3")
        compton -b -f -m 0.95 &
        nitrogen --restore &
        volumeicon &
        clipit &
        nm-applet &
        #/opt/teamviewer/tv_bin/script/teamviewer &
        #hp-systray -x &
        /bin/sh -c 'sleep 5; dropbox start -i' &
        /bin/sh -c 'sleep 5; killall -9 gnome-keyring-daemon' &
        caja --no-default-window --no-desktop &
        i3-sensible-terminal &
        exec /usr/bin/i3
        ;;
    "i3-with-shmlog")
        compton -b -f -m 0.95 &
        nitrogen --restore &
        volumeicon &
        clipit &
        nm-applet &
        #/opt/teamviewer/tv_bin/script/teamviewer &
        #hp-systray -x &
        /bin/sh -c 'sleep 5; dropbox start -i' &
        /bin/sh -c 'sleep 5; killall -9 gnome-keyring-daemon 2>&1 /dev/null' &
        caja --no-default-window --no-desktop &
        i3-sensible-terminal &
        exec /usr/bin/i3-with-shmlog
        ;;
    "mate-session")
        exec "/usr/bin/mate-session"
        ;;
    *)
        exec "$SESSION_NAME"
        ;;
esac
